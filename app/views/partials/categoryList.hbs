<section class="ui raised segment">
    <div class="ui grid">
        <aside class="six wide column">
            <img src="images/homer5.jpg" class="ui medium image">
        </aside>
        <article class="eight wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Point of Int</th>
                    <th>Description</th>
                    <th>mongo obj id</th>
                </tr>
                </thead>
                <tbody>
                {{#each groupCat}}
                    <tr><td>{{ this.[0].category}}</td></tr>
                    {{#each this}}
                        <tr>
                        <td>{{ this.name }}</td>
                        <td> {{this.description}} </td>
                        <td> {{this._id}} </td>
                        </tr>
                    {{/each}}
                {{/each}}

                </tbody>
            </table>
        </article>
    </div>
</section>